{
  "name": "my-amazing-todo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start:nest": "turbo run deploy --filter=nest",
    "start:vite": "turbo run deploy --filter=vite",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,vue}\"",
    "dev:vite": "yarn workspace vite dev",
    "dev:nest": "yarn workspace nest start:dev"
  },
  "devDependencies": {
    "prettier": "^2.6.0",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.15"
}
